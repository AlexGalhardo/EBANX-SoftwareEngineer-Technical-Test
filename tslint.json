{
    "defaultSeverity": "error",
    "linterOptions": {
        "exclude": [
            "node_modules/"
        ]
    },
    "extends": [
        "tslint:recommended",
        "tslint:latest",
        "tslint-config-prettier"
    ],
    "jsRules": {},
    "rules": {
        "prettier/prettier'": [
            "warn",
            {
              "singleQuote": false,
              "semi": true
            }
          ],
        "trailing-comma": [
            false
        ],
        "semicolon": [
            false,
            "never"
        ],
        "prefer-for-of": false,
        "no-console": false,
        "no-empty": false,
        "object-literal-sort-keys": false,
        "no-arg": false,
        "no-submodule-imports": false,
        "max-classes-per-file": false,
        "quotemark": [
            true,
            "double"
        ],
        "no-bitwise": false,
        "no-implicit-dependencies": false
    },
    "rulesDirectory": []
}
